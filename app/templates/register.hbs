<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <h3>Fill the form to register an account</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    {{#if error}}
    <div class="alert alert-warning">
      <div class="alert-title">
        <h4>Oops, there was a problem:</h4>
      </div>
      <h5>{{error.message}}</h5>
    </div>
    {{/if}}
  </div>
</div>

<form {{action 'signUp' on='submit'}} class="form-horizontal" role='form'>
  <div class='form-group'>
    <div class="row">
      <label class="col-sm-5 control-label" for='userEmail'>
        <p class='lead'>Please enter your email.</p>
      </label>
      <div class="col-sm-4">
        {{input type="email" classNames="form-control" value=userEmail id="userEmail" placeholder="winner@example.com"}}
      </div>
    </div>
    <div class="row">
      <label class="col-sm-5 control-label" for='newPassword'>
        <p class='lead'>Please pick a password.</p>
      </label>
      <div class="col-sm-4">
        {{input type="password" classNames="form-control" value=userPassword id="userPassword" placeholder="secret but memorable"}}
      </div>
    </div>
    <div class="col-sm-10">
      <button type="submit" class="btn btn-custom pull-right">Finish Sign Up</button>
    </div>
  </div>
</form>
