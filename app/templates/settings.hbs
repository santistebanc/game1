<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Settings</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    {{#if error}}
    <div class="alert alert-warning">
      <div class="alert-title">
        <h4>Oops, there was a problem:</h4>
      </div>
      <h5>{{error.message}}</h5>
    </div>
    {{/if}}
  </div>
</div>

<form {{action 'save' on='submit'}} class="form-horizontal" role='form'>
  <div class='form-group'>
    <div class="row">
      <label class="col-sm-5 control-label" for='userName'>
        <p class='lead'>Please enter your name</p>
      </label>
      <div class="col-sm-4">
        {{input type="text" classNames="form-control" value=model.name id="userName"}}
      </div>
    </div>

    <div class="col-sm-10">
      <button type="submit" class="btn btn-custom pull-right">Save</button>
    </div>
  </div>
</form>
